<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finance Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="AddBtn" Content="➕ Добавить" Click="AddBtn_Click" Padding="10,5" Margin="5"/>
            <Button x:Name="EditBtn" Content="✏️ Редактировать" Click="EditBtn_Click" Padding="10,5" Margin="5"/>
            <Button x:Name="DeleteBtn" Content="❌ Удалить" Click="DeleteBtn_Click" Padding="10,5" Margin="5"/>
            <Button x:Name="RefreshBtn" Content="🔄 Обновить" Click="RefreshBtn_Click" Padding="10,5" Margin="5"/>
            <Button x:Name="LogoutButton" Content="Выйти" Click="LogoutButton_Click" 
                    Padding="10,5" Margin="5" Width="80"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchTextBox" Width="200" Height="25" 
                         TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="CurrentUserText" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <DataGrid x:Name="TransactionsGrid" Grid.Row="2" Margin="0,10" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TransactionId}" Width="50"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat='{}{0:N2} ₽'}" Width="100"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="120"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding TransactionDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock x:Name="StatsText" FontWeight="Bold" Margin="0,0,20,0"/>
            <TextBlock x:Name="IncomeText" Foreground="Green" Margin="0,0,20,0"/>
            <TextBlock x:Name="ExpenseText" Foreground="Red" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</Window>