<Window x:Class="WpfApp1.Views.TransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить транзакцию" Height="614" Width="500" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <!-- Ресурсы в стиле проекта -->
    <Window.Resources>
        <!-- Стиль ComboBox в стиле проекта -->
        <Style x:Key="ProjectComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" 
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="#E8CBAA"
                                    Background="#F9F9F9">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Текст выбранного элемента -->
                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      Margin="10,0,0,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>

                                    <!-- Стрелка вниз -->
                                    <ToggleButton Grid.Column="1" 
                                                  x:Name="toggleButton"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Focusable="False">
                                        <Path Data="M0,0 L4,4 8,0 Z"
                                              Fill="#888888"
                                              StrokeThickness="0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Width="12"
                                              Height="6"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Выпадающий список -->
                            <Popup x:Name="PART_Popup" 
                                   Placement="Bottom"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide"
                                   Focusable="False">
                                <Border x:Name="dropDownBorder" 
                                        Background="White"
                                        BorderBrush="#E8CBAA"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        MinWidth="{Binding ActualWidth, ElementName=border}">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#BC6C25"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#BC6C25"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль элементов ComboBox -->
        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"
                                              Margin="10,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9F9F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E8CBAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль TextBox для времени -->
        <Style x:Key="TimeTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#BC6C25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="#E8CBAA"
                                Background="#F9F9F9">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#BC6C25"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Margin="20" Background="White"
            BorderThickness="1" BorderBrush="#E0E0E0">
        <Grid>
            <!-- Декоративные элементы -->
            <Grid IsHitTestVisible="False">
                <Ellipse Width="80" Height="80" 
                         Fill="#E8CBAA" Opacity="0.15"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="30,10,0,0"/>

                <Ellipse Width="60" Height="60" 
                         Fill="#606C38" Opacity="0.12"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Margin="0,0,30,10"/>

                <Ellipse Width="40" Height="40"
                         Fill="#BC6C25" Opacity="0.18"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Margin="0,150,0,0"/>
            </Grid>

            <!-- Основной контент -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" 
                           Text="ТРАНЗАКЦИЯ" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Foreground="#606C38"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,20"/>

                <!-- Описание -->
                <StackPanel Grid.Row="1" Margin="30,0,30,15">
                    <TextBlock Text="Описание:" 
                               FontSize="14"
                               Foreground="#606C38"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="8" 
                            BorderThickness="2"
                            BorderBrush="#E8CBAA"
                            Background="#F9F9F9">
                        <TextBox x:Name="DescTextBox" 
                                 BorderThickness="0"
                                 Padding="12,10"
                                 FontSize="14"
                                 Height="35"
                                 Background="Transparent"
                                 Foreground="#333333"
                                 VerticalContentAlignment="Center"
                                 CaretBrush="#BC6C25"/>
                    </Border>
                </StackPanel>

                <!-- Сумма -->
                <StackPanel Grid.Row="2" Margin="30,0,30,15">
                    <TextBlock Text="Сумма (₽):" 
                               FontSize="14"
                               Foreground="#606C38"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="8" 
                            BorderThickness="2"
                            BorderBrush="#E8CBAA"
                            Background="#F9F9F9">
                        <TextBox x:Name="AmountTextBox" 
                                 BorderThickness="0"
                                 Padding="12,10"
                                 FontSize="14"
                                 Height="35"
                                 Background="Transparent"
                                 Foreground="#333333"
                                 VerticalContentAlignment="Center"
                                 CaretBrush="#BC6C25"/>
                    </Border>
                </StackPanel>

                <!-- Тип и Категория в стиле проекта -->
                <Grid Grid.Row="3" Margin="30,0,30,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Тип -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Тип:" 
                                   FontSize="14"
                                   Foreground="#606C38"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="TypeComboBox"
                                  Style="{StaticResource ProjectComboBoxStyle}"
                                  PreviewMouseWheel="ComboBox_PreviewMouseWheel">
                            <ComboBoxItem Content="Доход" IsSelected="True"/>
                            <ComboBoxItem Content="Расход"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Категория -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Категория:" 
                                   FontSize="14"
                                   Foreground="#606C38"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="CategoryComboBox" 
                                  Style="{StaticResource ProjectComboBoxStyle}"
                                  PreviewMouseWheel="ComboBox_PreviewMouseWheel">
                            <ComboBoxItem Content="Зарплата"/>
                            <ComboBoxItem Content="Фриланс"/>
                            <ComboBoxItem Content="Еда" IsSelected="True"/>
                            <ComboBoxItem Content="Коммуналка"/>
                            <ComboBoxItem Content="Транспорт"/>
                            <ComboBoxItem Content="Развлечения"/>
                            <ComboBoxItem Content="Покупки"/>
                            <ComboBoxItem Content="Здоровье"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Дата и Время -->
                <Grid Grid.Row="4" Margin="30,0,30,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Дата - ПРОСТАЯ РАБОЧАЯ РЕАЛИЗАЦИЯ -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Дата:" 
                                   FontSize="14"
                                   Foreground="#606C38"
                                   Margin="0,0,0,8"/>
                        <Border CornerRadius="8" 
                                BorderThickness="2"
                                BorderBrush="#E8CBAA"
                                Background="#F9F9F9"
                                Height="35">
                            <DatePicker x:Name="DatePicker" 
                                        BorderThickness="0"
                                        FontSize="14"
                                        Background="Transparent"
                                        VerticalAlignment="Center"
                                        Height="35"
                                        VerticalContentAlignment="Center"
                                        SelectedDateFormat="Short">
                                <!-- Минимальный стиль для нормальной работы -->
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#333333"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Grid>
                                                        <TextBox x:Name="PART_TextBox" 
                                                                 Text="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, StringFormat='dd.MM.yyyy'}"
                                                                 BorderThickness="0"
                                                                 Padding="10,8"
                                                                 Background="Transparent"
                                                                 Foreground="#333333"
                                                                 VerticalContentAlignment="Center"
                                                                 IsReadOnly="False"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Border>
                    </StackPanel>

                    <!-- Время -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Время:" 
                                   FontSize="14"
                                   Foreground="#606C38"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="TimeTextBox" 
                                 Style="{StaticResource TimeTextBoxStyle}"
                                 Text="12:00"
                                 PreviewMouseWheel="TextBox_PreviewMouseWheel" TextChanged="TimeTextBox_TextChanged"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки в стиле проекта -->
                <StackPanel Grid.Row="6" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,20,30,20">
                    <Button x:Name="OkButton"
                            Content="ОК" 
                            Click="OkBtn_Click" 
                            IsDefault="True"
                            Background="#606C38"
                            Foreground="#FFFFFF"
                            BorderBrush="#606C38"
                            Width="100"
                            Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    CornerRadius="8"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4A582C"/>
                                                    <Setter Property="BorderBrush" Value="#4A582C"/>
                                                    <Setter TargetName="border" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#3A4724"/>
                                                    <Setter Property="BorderBrush" Value="#3A4724"/>
                                                    <Setter TargetName="border" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CancelButton"
                            Content="ОТМЕНА" 
                            Click="CancelBtn_Click" 
                            IsCancel="True"
                            Background="#BC6C25"
                            Foreground="#FFFFFF"
                            BorderBrush="#BC6C25"
                            Width="100"
                            Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    CornerRadius="8"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#9A5520"/>
                                                    <Setter Property="BorderBrush" Value="#9A5520"/>
                                                    <Setter TargetName="border" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#7A441B"/>
                                                    <Setter Property="BorderBrush" Value="#7A441B"/>
                                                    <Setter TargetName="border" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>