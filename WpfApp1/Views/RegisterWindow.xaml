<Window x:Class="WpfApp1.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание аккаунта" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Text="Имя пользователя:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" x:Name="UsernameTextBox" 
                 Height="25" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="4" x:Name="PasswordBox" 
                     Height="25" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Text="Email:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="6" x:Name="EmailTextBox" 
                 Height="25" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" Click="RegisterBtn_Click" 
                    Width="120" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelBtn_Click" 
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>