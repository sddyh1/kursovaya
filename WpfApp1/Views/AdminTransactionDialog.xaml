<Window x:Class="WpfApp1.Views.AdminTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Транзакция (администратор)" Height="708" Width="500" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border CornerRadius="20" Margin="30" Background="White"
            BorderThickness="1" BorderBrush="#E0E0E0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,40,0,30">
                <TextBlock Text="ТРАНЗАКЦИЯ" 
                           HorizontalAlignment="Center"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#606C38"/>
                <Border Height="3" Width="120" 
                        HorizontalAlignment="Center" 
                        Background="#E8CBAA"
                        Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Пользователь -->
            <StackPanel Grid.Row="1" Margin="50,0,50,15">
                <TextBlock Text="Пользователь:" 
                           FontSize="14"
                           Foreground="#606C38"
                           Margin="0,0,0,8"/>
                <Border CornerRadius="10" 
                        BorderThickness="2"
                        BorderBrush="#E8CBAA"
                        Background="#F9F9F9">
                    <ComboBox x:Name="UserComboBox"
                              DisplayMemberPath="Username"
                              SelectedValuePath="UserId"
                              BorderThickness="0"
                              Padding="12,10"
                              FontSize="14"
                              Background="Transparent"
                              Foreground="#333333"/>
                </Border>
            </StackPanel>

            <!-- Описание -->
            <StackPanel Grid.Row="2" Margin="50,0,50,15">
                <TextBlock Text="Описание:" 
                           FontSize="14"
                           Foreground="#606C38"
                           Margin="0,0,0,8"/>
                <Border CornerRadius="10" 
                        BorderThickness="2"
                        BorderBrush="#E8CBAA"
                        Background="#F9F9F9">
                    <TextBox x:Name="DescTextBox" 
                             BorderThickness="0"
                             Padding="12,12"
                             FontSize="14"
                             Background="Transparent"
                             Foreground="#333333"
                             VerticalContentAlignment="Center"
                             CaretBrush="#BC6C25">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#BC6C25"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </StackPanel>

            <!-- Сумма -->
            <StackPanel Grid.Row="3" Margin="50,0,50,15">
                <TextBlock Text="Сумма (₽):" 
                           FontSize="14"
                           Foreground="#606C38"
                           Margin="0,0,0,8"/>
                <Border CornerRadius="10" 
                        BorderThickness="2"
                        BorderBrush="#E8CBAA"
                        Background="#F9F9F9">
                    <TextBox x:Name="AmountTextBox" 
                             BorderThickness="0"
                             Padding="12,12"
                             FontSize="14"
                             Background="Transparent"
                             Foreground="#333333"
                             VerticalContentAlignment="Center"
                             CaretBrush="#BC6C25">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#BC6C25"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </StackPanel>

            <!-- Тип и Категория -->
            <Grid Grid.Row="4" Margin="50,0,50,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Тип -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Тип:" 
                               FontSize="14"
                               Foreground="#606C38"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="10" 
                            BorderThickness="2"
                            BorderBrush="#E8CBAA"
                            Background="#F9F9F9">
                        <ComboBox x:Name="TypeComboBox"
                                  BorderThickness="0"
                                  Padding="12,10"
                                  FontSize="14"
                                  Background="Transparent"
                                  Foreground="#333333">
                            <ComboBoxItem Content="Доход" IsSelected="True"/>
                            <ComboBoxItem Content="Расход"/>
                        </ComboBox>
                    </Border>
                </StackPanel>

                <!-- Категория -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Категория:" 
                               FontSize="14"
                               Foreground="#606C38"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="10" 
                            BorderThickness="2"
                            BorderBrush="#E8CBAA"
                            Background="#F9F9F9">
                        <ComboBox x:Name="CategoryComboBox"
                                  BorderThickness="0"
                                  Padding="12,10"
                                  FontSize="14"
                                  Background="Transparent"
                                  Foreground="#333333">
                            <ComboBoxItem Content="Зарплата"/>
                            <ComboBoxItem Content="Фриланс"/>
                            <ComboBoxItem Content="Еда" IsSelected="True"/>
                            <ComboBoxItem Content="Коммуналка"/>
                            <ComboBoxItem Content="Транспорт"/>
                            <ComboBoxItem Content="Развлечения"/>
                            <ComboBoxItem Content="Покупки"/>
                            <ComboBoxItem Content="Здоровье"/>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Дата и Время -->
            <Grid Grid.Row="5" Margin="50,0,50,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Дата -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Дата:" 
                               FontSize="14"
                               Foreground="#606C38"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="10" 
                            BorderThickness="2"
                            BorderBrush="#E8CBAA"
                            Background="#F9F9F9">
                        <DatePicker x:Name="DatePicker" 
                                    BorderThickness="0"
                                    FontSize="14"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    Height="45"
                                    VerticalContentAlignment="Center"
                                    SelectedDateFormat="Short">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,12"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Border>
                </StackPanel>

                <!-- Время -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Время:" 
                               FontSize="14"
                               Foreground="#606C38"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="10" 
                            BorderThickness="2"
                            BorderBrush="#E8CBAA"
                            Background="#F9F9F9">
                        <TextBox x:Name="TimeTextBox" 
                                 BorderThickness="0"
                                 Padding="12,12"
                                 FontSize="14"
                                 Background="Transparent"
                                 Foreground="#333333"
                                 VerticalContentAlignment="Center"
                                 CaretBrush="#BC6C25"
                                 Text="12:00">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border x:Name="border" 
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#BC6C25"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Кнопки -->
            <StackPanel Grid.Row="7" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,30">
                <Button x:Name="OkButton"
                        Content="ОК" 
                        Click="OkButton_Click" 
                        IsDefault="True"
                        Background="#606C38"
                        Foreground="#FFFFFF"
                        BorderBrush="#606C38"
                        Width="100"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="0,0,15,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4A582C"/>
                                                <Setter Property="BorderBrush" Value="#4A582C"/>
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#3A4724"/>
                                                <Setter Property="BorderBrush" Value="#3A4724"/>
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="CancelButton"
                        Content="ОТМЕНА" 
                        Click="CancelButton_Click" 
                        IsCancel="True"
                        Background="#BC6C25"
                        Foreground="#FFFFFF"
                        BorderBrush="#BC6C25"
                        Width="100"
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#9A5520"/>
                                                <Setter Property="BorderBrush" Value="#9A5520"/>
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#7A441B"/>
                                                <Setter Property="BorderBrush" Value="#7A441B"/>
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>